<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts.contactItemFragment">

    <TextView
        android:id="@+id/contact_item_name"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginTop="68dp"
        android:text="Name"
        android:textSize="34sp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_item_photo" />

    <TextView
        android:id="@+id/contact_item_phone"
        android:layout_width="364dp"
        android:layout_height="64dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="80dp"
        android:text="phone_number"
        android:gravity="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_item_name" />

    <ImageView
        android:id="@+id/contact_item_photo"
        android:layout_width="295dp"
        android:layout_height="258dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>